<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/con_notes"
    android:layout_height="100dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardElevation="1dp"
        cardview:cardPreventCornerOverlap="true"
        cardview:cardUseCompatPadding="true"
        cardview:contentPadding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Title"

            app:layout_constraintVertical_weight="5"
            app:layout_constraintTop_toTopOf="@id/con1"
            app:layout_constraintBottom_toTopOf="@id/tv_note_content"
            />
        <TextView
            android:id="@+id/tv_note_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Content"
            app:layout_constraintVertical_weight="6"
            app:layout_constraintTop_toBottomOf="@id/tv_note_title"
            />
        <TextView
            android:id="@+id/tv_note_creation_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Date"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintStart_toStartOf="@id/con1"
            app:layout_constraintEnd_toEndOf="@id/con1"
            app:layout_constraintTop_toBottomOf="@id/tv_note_content"
            app:layout_constraintBottom_toBottomOf="@id/con1"

            />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>